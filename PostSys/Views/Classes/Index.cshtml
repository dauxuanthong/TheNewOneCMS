@model IEnumerable<PostSys.Models.Class>
@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Classes", FormMethod.Get))
{
	<p>
		Find by Class name: @Html.TextBox("SearchString")
		<input type="submit" value="Search" />
	</p>

	<table class="table table-hover">
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Coordinator Name</th>
			<th>Faculty</th>
			<th>Delete</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Coordinator.UserName</td>
				<td>@item.Faculty.Name</td>
				<td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
			</tr>
		}
	</table>
}

